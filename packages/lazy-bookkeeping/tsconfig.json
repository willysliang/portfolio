{
  "extends": "../../tsconfig.json",
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["./node_modules", "../../node_modules"],
  "compilerOptions": {
    "allowJs": false,
    // "allowJs": true, // 允许在ts中使用普通 JS 代码
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "scripthost"],
    "types": ["vite/client"],
    "resolveJsonModule": true, // 可导入JSON
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"],
      "@comp/*": ["./src/components/*"],
      "@view/*": ["./src/views/*"],
      "@type/*": ["./src/types/*"],
      "@store/*": ["./src/store/*"],
      "@api/*": ["./src/api/*"],
      "@util/*": ["./src/utils/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./types/**/*.d.ts",
    "./types/**/*.ts",
    "./mock/**/*.ts",
    "./vite.config.ts"
  ],
}
