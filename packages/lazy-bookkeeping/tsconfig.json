{
  "compilerOptions": {
    "allowJs": false,
    // "allowJs": true, // 允许在ts中使用普通 JS 代码
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"],
      "@comp/*": ["src/components/*"],
      "@view/*": ["src/views/*"],
      "@type/*": ["src/types/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/module/*"],
      "@util/*": ["src/utils/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext", "scripthost"],
    "types": [
      "vite/client",
      "element-plus/global",
      "unplugin-vue-define-options"
    ],
    "resolveJsonModule": true // 可导入JSON
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "mock/**/*.ts",
    "vite.config.ts",
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

