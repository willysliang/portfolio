{
  "extends": "../../tsconfig.json",
  "references": [{ "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"],
      "@comp/*": ["src/components/*"],
      "@view/*": ["src/views/*"],
      "@type/*": ["src/types/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"],
      "@util/*": ["src/utils/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
}
